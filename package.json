{
    "name": "@outerbase/astra",
    "version": "0.0.1",
    "type": "module",
    "main": "out/js/index.js",
    "module": "out/js/index.js",
    "types": "out/js/index.d.ts",
    "files": [
        "out/js/*",
        "out/web-components/astra.bundle.js"
    ],
    "scripts": {
        "dev": "astro dev --config .config/astro.config.mjs",
        "build": "astro check --config .config/astro.config.mjs && astro build --config .config/astro.config.mjs",
        "compile": "tsc -p .config/tsconfig.distribute.json",
        "compile:watch": "node .config/compile-typescript-on-changes.mjs",
        "bundle": "rollup -c ./.config/rollup.config.js",
        "preview": "astro preview --config .config/astro.config.mjs",
        "prepack": "pnpm compile && pnpm bundle"
    },
    "devDependencies": {
        "@astrojs/check": "^0.5.10",
        "@astrojs/lit": "^4.0.1",
        "@fontsource/inter": "^5.0.17",
        "@lit-labs/ssr-client": "^1.1.7",
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-multi-entry": "^6.0.1",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@webcomponents/template-shadowroot": "^0.2.1",
        "astro": "^4.6.2",
        "chokidar": "^3.6.0",
        "husky": "^9.0.11",
        "lit": "^3.1.3",
        "prettier": "^3.2.5",
        "prettier-plugin-astro": "^0.13.0",
        "rollup": "^4.14.3",
        "typescript": "^5.4.5"
    },
    "peerDependencies": {
        "@fontsource/inter": "^5.0.17",
        "lit": "^3.1.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pnpm prepack"
        }
    }
}
