{
  "name": "@outerbase/astra",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/js/index.js",
  "module": "dist/js/index.js",
  "types": "dist/js/index.d.ts",
  "files": [
    "dist/js/*",
    "dist/web-components/astra.bundle.js"
  ],
  "scripts": {
    "tailwind:dev": "concurrently \"tailwindcss -c .build/tailwind/tailwind.config.distribute.mjs -i .build/tailwind/tailwindlib.css -o .build/tailwind/tailwind.css --watch\" \"node .build/tailwind/css-to-js.mjs --input .build/tailwind/tailwind.css --output ./src/lib/tailwind.ts --watch\"",
    "tailwind:build": "tailwindcss -c .build/tailwind/tailwind.config.distribute.mjs -i .build/tailwind/tailwindlib.css -o .build/tailwind/tailwind.css && node .build/tailwind/css-to-js.mjs --input .build/tailwind/tailwind.css --output ./src/lib/tailwind.ts",
    "dev": "concurrently \"pnpm tailwind:dev\" \"astro dev --config .build/astro.config.mjs\"",
    "build": "pnpm tailwind:build && astro check --config .build/astro.config.mjs && astro build --config .build/astro.config.mjs",
    "compile": "tsc -p .build/tsconfig.distribute.json",
    "compile:watch": "node .build/compile-typescript-on-changes.mjs",
    "bundle": "rollup -c ./.build/rollup.config.js",
    "preview": "astro preview --config .build/astro.config.mjs",
    "prepack": "pnpm tailwind:build && pnpm compile && pnpm bundle",
    "prepare": "husky"
  },
  "devDependencies": {
    "@astrojs/check": "^0.5.10",
    "@astrojs/lit": "^4.0.1",
    "@astrojs/tailwind": "^5.1.0",
    "@fontsource/inter": "^5.0.17",
    "@lit-labs/ssr-client": "^1.1.7",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/lodash-es": "^4.17.12",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "astro": "^4.6.2",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "lit": "^3.1.3",
    "lodash-es": "^4.17.21",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "rollup": "^4.14.3",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "@fontsource/inter": "^5.0.17",
    "lit": "^3.1.2"
  }
}
