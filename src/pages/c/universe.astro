---
import { TextEditor } from '../../components/universe/index'
import { KeyboardShortcutsPlugin } from '../../components/universe/plugins/shortcuts'
import { UniverseUndoPlugin } from '../../components/universe/plugins/undo'
import Layout from '../../layouts/Layout.astro'
---

<Layout title="Astra-UI">
  <div class="flex flex-col gap-4">
    <div>
      <h1><pre>&lt;text-editor wrap /&gt;</pre> .bg-red-800</h1>
      <div class="h-[400px] w-full bg-red-800 text-5xl">
        <!-- @ts-ignore attributes -->
        <TextEditor client:only="lit" wrap />
      </div>
    </div>

    <div>
      <h1><pre>&lt;text-editor /&gt;</pre> .bg-zinc-800</h1>
      <div class="h-[400px] w-full bg-zinc-800">
        <TextEditor client:only="lit" />
      </div>
    </div>
    <div>
      <h1><pre>&lt;text-editor /&gt;</pre> .bg-indigo-800</h1>
      <div class="h-[400px] w-full bg-indigo-800">
        <TextEditor client:only="lit" />
      </div>
    </div>
    <div>
      <h1><pre>&lt;text-editor /&gt;</pre> .bg-green-800</h1>
      <div class="h-[400px] w-full bg-green-800">
        <TextEditor client:only="lit" />
      </div>
    </div>
    <div>
      <h1><pre>&lt;text-editor /&gt;</pre> .bg-orange-600</h1>
      <div class="h-[400px] w-full bg-orange-600">
        <TextEditor client:only="lit" />
      </div>
    </div>
    <div>
      <h1><pre>&lt;text-editor /&gt;</pre> .bg-yellow-600</h1>
      <div class="h-[400px] w-full bg-yellow-600">
        <TextEditor client:only="lit" />
        <!-- @ts-ignore attributes -->
        <TextEditor client:only="lit" wrap>
          <KeyboardShortcutsPlugin client:only="lit" />
          <UniverseUndoPlugin client:only="lit" />
        </TextEditor>
      </div>
    </div>
  </div>
</Layout>

<script type="module">
  document.addEventListener('universe:submit', (event) => {
    console.info('User submitted the text area', event.detail)
  })
</script>
