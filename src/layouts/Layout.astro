---
interface Props {
    title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="h-full bg-neutral-50 dark:bg-neutral-950 text-black dark:text-white">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <style>
            body {
                margin: 2rem;
            }
        </style>
    </head>
    <body>
        <slot />
    </body>
</html>
